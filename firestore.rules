rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Users can read and write their own sessions subcollection
      match /sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Chat conversations - users can only access their own conversations
    match /chatConversations/{conversationId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
            // Books - allow read/write for authenticated users
            match /books/{bookId} {
              allow read, write: if request.auth != null;
            }
            
            // Book content - allow read/write for authenticated users (temporarily for testing)
            match /bookContent/{bookId} {
              allow read, write: if request.auth != null;
            }
            
            // Cardology books - allow read/write for authenticated users
            match /cardologyBooks/{bookId} {
              allow read, write: if request.auth != null;
            }
    
    // Test collection - allow read/write for authenticated users
    match /test/{testId} {
      allow read, write: if request.auth != null;
    }
  }
}
